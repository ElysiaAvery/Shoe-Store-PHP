<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
  <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet" type="text/css" media="all">
  <title>Shoe-Buddy</title>
</head>
<body>
  <div class="container-fluid">
    <div class="jumbotron fill">
      <img class="img-responsive" src="/shoe.jpg">
      <div class="row">
        <div class="col-md-6" id="transparent">
          <h1 id="whitetxt">Shoe Buddy</h1>
          <h3>Stores</h3>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-4" id="links">
          <a href="/" class="shoe-link"><h2>Go Home</h2></a>
          <br>
          <a href="/stores" class="shoe-link"><h2>View All Shoe Stores</h2></a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4" id="store-links">
          <form type="form-control" action='/brands' method='post'>
            <label for='name'>Brand Name:</label>
            <input id='name' name='name' type='text'>
            <button type='submit' class="btn btn-primary">Add Brand</button>
          </form>
          <form action='/delete_brands' method='post'>
            <button type='submit' class="btn btn-danger">Delete All Brands</button>
          </form>
        </div>
        <div class="col-md-4" id="store-links">
          {% if brands is not empty %}
            <h2>Current Shoe Brands:</h2>
            <ul>
              {% for brand in brands %}
                <li><a href="brands/{{ brand.getId }}">{{ brand.getName }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div class="col-md-2"></div>
      </div>
    </div>
  </div>
</body>
</html>
